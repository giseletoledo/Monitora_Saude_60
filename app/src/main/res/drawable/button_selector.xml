<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="2dp"
                    android:color="#00FF00" /> <!-- Define a cor do contorno, nesse caso verde -->
                <corners android:radius="8dp" /> <!-- Define o raio dos cantos do botão -->
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="0dp"
                    android:color="@android:color/transparent" /> <!-- Define um contorno transparente para o estado não pressionado -->
                <corners android:radius="8dp" /> <!-- Define o raio dos cantos do botão -->
            </shape>
        </item>
    </selector>